{
    "manifest_version": 3,
    "name": "Experian Auto Decline",
    "version": "0.0.1",
    "description": "Automatically decline Experian upgrade offers",
    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    },
    "content_scripts": [
        {
            "js": ["scripts/decline.js"],
            "matches": [
                "https://usa.experian.com/member/*"
            ]
        }
    ]
}